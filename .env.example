# .env файл для настройки приложения

# Базовый URL приложения (для развертывания)
NUXT_PUBLIC_BASE_URL=https://your-domain.com

# Яндекс OAuth настройки
NUXT_PUBLIC_YANDEX_CLIENT_ID=your_yandex_client_id_here

# URL для получения токена (можно кастомизировать)
NUXT_PUBLIC_YANDEX_OAUTH_URL=https://oauth.yandex.ru/authorize

# Настройки синхронизации по умолчанию
NUXT_PUBLIC_DEFAULT_SYNC_INTERVAL=5
NUXT_PUBLIC_DEFAULT_FOLDER_PATH=/Apps/ProjectManager
NUXT_PUBLIC_DEFAULT_FILE_NAME=projects.json

# API endpoints Яндекс.Диска (если вдруг изменятся)
NUXT_PUBLIC_YANDEX_API_BASE=https://cloud-api.yandex.net/v1/disk

# Настройки приложения
NUXT_PUBLIC_APP_NAME=Project Manager
NUXT_PUBLIC_APP_VERSION=1.0.0

# Настройки безопасности
NUXT_PUBLIC_MAX_PROJECTS=100
NUXT_PUBLIC_MAX_TASKS_PER_PROJECT=50

# Отладка (только для development)
NUXT_PUBLIC_DEBUG_SYNC=false
NUXT_PUBLIC_DEBUG_STORAGE=false